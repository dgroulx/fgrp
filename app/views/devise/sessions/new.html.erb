<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="form-inputs">
  	<table>
		<tr>
			<td><%= f.input :email, :required => false, :autofocus => true, :placeholder => "username@fgrp.org" %></td>
		</tr>
		<tr>
			<td><%= f.input :password, :required => false %></td>
		</tr>
		<tr>
			<td><%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %></td>
		</tr>
  	</table>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
