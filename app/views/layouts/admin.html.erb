<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= stylesheet_link_tag    "admin", :media => "all" %>
  <%= javascript_include_tag "admin" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div style="text-align: left">
    <a class="logo hide-content" href="<%= parks_path %>">Friends of Grand Rapids Parks</a>
    <%= link_to "Go To Site", parks_path %>
    <%= link_to "Parks", admin_parks_path %>
    <%= link_to "Amenities", admin_amenities_path %>
    <%= link_to "Facts", admin_facts_path %>
    <%= link_to "Users", admin_users_path if can? :manage, User %>
    <%= link_to current_user.email, edit_admin_user_path(current_user) %>
    <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
  </div>
  <div class="clear"></div>
<%= yield %>

</body>
</html>
